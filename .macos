# Disable smart quotes
defaults write NSGlobalDomain NSAutomaticQuoteSubstitutionEnabled -bool false

# Disable smart dashes
defaults write NSGlobalDomain NSAutomaticDashSubstitutionEnabled -bool false

# Sort folders before files in Finder
defaults write com.apple.finder _FXSortFoldersFirst -bool true

# Hide desktop icons
defaults write com.apple.finder CreateDesktop -bool false

# Save screenshots to ~/Downloads
defaults write com.apple.screencapture location ~/Downloads
# then run `killall SystemUIServer`

# Resize Tweetbot font to match system font
defaults write com.tapbots.TweetbotMac fontSize 14

# Keyboard shortcuts:
# Command @
# Control ^
# Option  ~
# Shift   $
# Tab     \\U21e5

# General pattern:
# run `defaults write <x> NSUserKeyEquivalents "{ 'a' = 'b'; }"`
# then run `defaults read com.apple.universalaccess com.apple.custommenu.apps`
# if `<x>` is not present, run `defaults write com.apple.universalaccess com.apple.custommenu.apps -array-add "<x>"`

# Customize Finder keyboard shortcuts
defaults write com.apple.finder NSUserKeyEquivalents "{ 'Go to Folder...' = '@\$o'; 'Hide Sidebar' = '@\\\\'; 'Hide Status Bar' = '@~s'; 'Show Sidebar' = '@\\\\'; 'Show Status Bar' = '@~s'; }"

# Customize Skype for Business keyboard shortcuts
defaults write com.microsoft.SkypeForBusiness NSUserKeyEquivalents "{ 'Skype Home' = '@t'; }"

# Customize Outlook keyboard shortcuts
defaults write com.microsoft.Outlook NSUserKeyEquivalents "{ 'Sidebar' = '@\\\\'; }"
