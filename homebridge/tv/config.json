{
  "bridge": {
    "name": "TV Bridge",
    "username": "$USERNAME",
    "port": $PORT,
    "pin": "$PIN"
  },
  "description": "SmartHome with Homebridge",
  "accessories": [
    {
      "accessory": "HarmonyTV",
      "name": "TV",
      "host": "$HOST",
      "remoteId": "$REMOTE_ID",
      "deviceId": "$DEVICE_ID",
      "speakerId": "$SPEAKER_ID",
      "commands": [
        {
          "action": "{\"command\":\"PowerToggle\",\"type\":\"IRCommand\",\"deviceId\":\"$DEVICE_ID\"}",
          "name": "PowerToggle",
          "label": "Power Toggle"
        },
        {
          "action": "{\"command\":\"VolumeDown\",\"type\":\"IRCommand\",\"deviceId\":\"$SPEAKER_ID\"}",
          "name": "VolumeDown",
          "label": "Volume Down"
        },
        {
          "action": "{\"command\":\"VolumeUp\",\"type\":\"IRCommand\",\"deviceId\":\"$SPEAKER_ID\"}",
          "name": "VolumeUp",
          "label": "Volume Up"
        },
        {
          "action": "{\"command\":\"DirectionDown\",\"type\":\"IRCommand\",\"deviceId\":\"$DEVICE_ID\"}",
          "name": "DirectionDown",
          "label": "Direction Down"
        },
        {
          "action": "{\"command\":\"DirectionLeft\",\"type\":\"IRCommand\",\"deviceId\":\"$DEVICE_ID\"}",
          "name": "DirectionLeft",
          "label": "Direction Left"
        },
        {
          "action": "{\"command\":\"DirectionRight\",\"type\":\"IRCommand\",\"deviceId\":\"$DEVICE_ID\"}",
          "name": "DirectionRight",
          "label": "Direction Right"
        },
        {
          "action": "{\"command\":\"DirectionUp\",\"type\":\"IRCommand\",\"deviceId\":\"$DEVICE_ID\"}",
          "name": "DirectionUp",
          "label": "Direction Up"
        },
        {
          "action": "{\"command\":\"Select\",\"type\":\"IRCommand\",\"deviceId\":\"$DEVICE_ID\"}",
          "name": "Select",
          "label": "Select"
        },
        {
          "action": "{\"command\":\"Menu\",\"type\":\"IRCommand\",\"deviceId\":\"$DEVICE_ID\"}",
          "name": "Menu",
          "label": "Menu"
        },
        {
          "action": "{\"command\":\"InputHdmi1\",\"type\":\"IRCommand\",\"deviceId\":\"$DEVICE_ID\"}",
          "name": "InputHdmi1",
          "label": "InputHdmi1"
        },
        {
          "action": "{\"command\":\"InputHdmi2\",\"type\":\"IRCommand\",\"deviceId\":\"$DEVICE_ID\"}",
          "name": "InputHdmi2",
          "label": "InputHdmi2"
        }
      ]
    }
  ]
}
