[alias]
	co = checkout
	log = "log --graph --pretty=format:'%C(auto)%h %s %Cgreen(%cr) %Cblue<%an>%Creset'"
	pr = "pull-request"
	open = browse

[color]
	# Use colors in Git commands that are capable of colored output when outputting to the terminal
	ui = auto

[core]
	quotepath = false
	excludesfile = ~/.gitignore

[credential]
	helper = osxkeychain

[user]
	name = Clay Miller
	email = clay@smockle.com
	signingkey = 6EB4C794

[github]
	user = smockle

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f

[push]
	default = simple

[help]
	autocorrect = -1

[hub]
	host = ghe-us.microsoft.com
	protocol = https

[fetch]
	prune = true

[gitlab]
	url = https://gitlab.com
	token = !security find-generic-password -a smockle -l 'gitlab token' -w
